//
// gallery.ui
//

import std.button;
import std.checkbox;
import std.slider;
import std.spinbox;
import std.lineedit;

Gallery {

  VerticalLayout
  {
    spacing: 15px;
    padding-top: 5px;
    padding-bottom: 5px;

    HorizontalLayout
    {
      spacing: 5px;
      padding-left: 5px;
      padding-right: 5px;

      Button {
        text: "Hello World!";
        preferred-width: 150px;

        clicked: {
        }
      }

      CheckBox {
        text: "Hello World!";
        preferred-width: 120px;

        toggled: |checked| {
          this.checked = checked;
        }
      }

      Slider {
        id: slider;
        min-width: 40px;
        preferred-width: 120px;

        changed: |value| {
          this.value = value;
        }

        released: {
        }
      }

      Text {
        min-width: 60px;
        text: STR$(ROUND(slider.value));
        font-family: "Noto Sans";
        font-size: 12pt;
        color: #000000;
        vertical-alignment: TextVerticalAlignment.Middle;
        horizontal-alignment: TextHorizontalAlignment.Left;
      }
    }

    HorizontalLayout
    {
      spacing: 5px;
      padding-left: 5px;
      padding-right: 5px;

      LineEdit {
        id: edit;
        min-width: 120px;
        preferred-width: 180px;
        text: "Hi";

        edited: |text| {
          this.text = text;
        }

        accepted: {
        }
      }

      SpinBox {
        id: spin;
        min-width: 100px;
        preferred-width: 100px;
        value: 99;

        changed: |value| {
          this.value = value;
        }

        accepted: {
        }
      }
    }
  }
}
