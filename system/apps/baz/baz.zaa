import std.stdio;
import sys.thread;

fn main
{
  var total = 0;

  for (var i = 0; i < 25; ++i)
  {
    std::printf(".");
    std::stdout.flush();
    var data = std::allocator::new<u8[4*1024*1024]>();

    std::printf(".");
    std::stdout.flush();
    std::memset(data, 0, sizeof(*data));

    total += sizeof(*data);

    std::print(total / 1024 / 1024);
  }
}
